{
    "extends": ["@nuxtjs", "standard"],
    "parserOptions": {
        "parser": "babel-eslint",
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "camelcase": [0],
        "no-console": "off",
        "vue/html-indent": ["error", 4],
        "space-before-function-paren": ["error", "always"]
    }
}
